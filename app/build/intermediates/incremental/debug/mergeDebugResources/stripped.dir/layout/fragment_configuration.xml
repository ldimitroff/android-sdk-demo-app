<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/screen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/player_configuration"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/screen_title"
        app:layout_constraintBottom_toTopOf="@id/load_player_button">

        <LinearLayout
            android:id="@+id/configuration_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/app_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/black"
                android:text="@string/app_name_configuration_title" />

            <EditText
                android:id="@+id/app_name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/black"
                android:minHeight="36dp" />

            <TextView
                android:id="@+id/app_bundle_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/black"
                android:text="@string/app_bundle" />

            <EditText
                android:id="@+id/app_bundle_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:textColor="@color/black"
                android:minHeight="36dp" />

            <TextView
                android:id="@+id/player_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/player_id" />

            <EditText
                android:id="@+id/et_player_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_appCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/app_category" />

            <EditText
                android:id="@+id/et_appCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/black"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_appStoreId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/app_store_id" />

            <EditText
                android:id="@+id/et_appStoreId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:ems="10"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_appStoreUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/app_store_url" />

            <EditText
                android:id="@+id/et_appStoreUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:ems="10"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_appVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/app_version" />

            <EditText
                android:id="@+id/et_appVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:ems="10"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/app_device_id" />

            <EditText
                android:id="@+id/et_device_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:ems="10"
                android:minHeight="36dp"/>
            <TextView
                android:id="@+id/tv_ifa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/ifa" />

            <EditText
                android:id="@+id/et_ifa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:ems="10"
                android:minHeight="36dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/load_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="6dp"
        android:text="@string/load_player"
        android:textAllCaps="true"
        android:backgroundTint="@color/cardview_dark_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>