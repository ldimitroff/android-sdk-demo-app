<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/optionFragment">

    <fragment
        android:id="@+id/optionFragment"
        android:name="com.exco.hostapp.integration.fragments.OptionFragment"
        android:label="OptionFragment">
        <action
            android:id="@+id/action_optionFragment_to_configurationFragment"
            app:destination="@id/configurationFragment" />
    </fragment>
    <fragment
        android:id="@+id/configurationFragment"
        android:name="com.exco.hostapp.integration.fragments.ConfigurationFragment"
        android:label="ConfigurationFragment"
        tools:layout="@layout/fragment_configuration">
        <action
            android:id="@+id/action_configurationFragment_to_playerFragmentLogs"
            app:destination="@id/playerFragmentLogs" />
    </fragment>
    <fragment
        android:id="@+id/playerFragmentLogs"
        android:name="com.exco.hostapp.integration.fragments.PlayerFragmentWithLogs"
        android:label="PlayerFragmentWithLogs" />
</navigation>